<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="playwithme.model.BoardMapper">
	
	
	<!-- 게시글 작성하면 Board테이블로 들어감 -->
	<insert id="write" parameterType="playwithme.model.BoardDTO">
			insert into Board (
				board_num,
				member_id,
				title,
				b_content,
				b_date,
				place,
				longitude,
				latitude,
				meet_time,
				num_people
			) values(
				board_num.next,
				#{member_id},
				#{title},
				#{b_content},
				sysdate,
				#{place},
				#{longitude},
				#{latitude},
				#{meet_time},
				#{num_people}
			)
	</insert>
	<!-- 전체 게시물 읽기 -->
	<select id = "list" resultType="playwithme.model.BoardDTO">
		select * from Board
	</select>
	
	<select id = "myList" resultType="playwithme.model.BoardDTO" parameterType="String">
		select * from Board
		where MEMBER_ID = #{member_id}
	</select>










</mapper>
